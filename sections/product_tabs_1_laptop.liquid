<div class="product_tabs_1_laptop">
  <div class="tabs_header">
    <div class="arrow_container">
      <i class="arrow left"></i>
    </div>
    {% assign Laptop_collection = collections["Laptop"] %}
    <div id="laptop">{{ Laptop_collection.title }}</div>
    <div class="arrow_container">
      <i class="arrow right"></i>
    </div>
  </div>
  <div class="tabs_container laptop">
    {% for product in Laptop_collection.products %}
      <div class="tab_product">
        {% if product.compare_at_price %}
          <div class="discount_percent">
            discount
          </div>
        {% endif %}
        <div class="product_photo">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: 'large' }}" alt="product_image">            
          </a>
        </div>
        <div class="product_name_container">
          <p>{{ product.title }}</p>
        </div>
        <div class="price_and_rating">
          <div class="price">
            {% if product.compare_at_price %}
              <p class="previous_price">{{ product.compare_at_price | money_with_currency }}</p>
              <p class="current_price price_highlight">{{ product.price | money_with_currency }}</p>               
            {% else %}
              <p class="current_price">{{ product.price | money_with_currency }}</p>
            {% endif %}
          </div>
          <div class="rating">
            <div class="yotpo bottomLine"
              data-appkey="3lLBvLxtXto59qFkbJb0OW5hGtCQ7VU2CrOsDGgn"
              data-domain="{{shop.permanent_domain | escape }}"
              data-product-id="{{ product.id }}"
              data-product-models="{{ product.id }}"
              data-name="{{ product.title | escape }}"
              data-url="{{ shop.url }}{{ product.url }}"
              data-image-url="{{ product.featured_image | product_img_url: 'large' |replace: '?', '%3F' | replace: '&','%26'}}"
              data-description="{{ product.description | escape }}"
              data-bread-crumbs="{% for tag in product.tags %}{{ tag | escape }};{% endfor %}">
            </div>
          </div>
        </div>

        <div class="buttons_bar">
          <button class="add_to_cart">
            <img class="gray_icon" src="{{ 'https://cdn.shopify.com/s/files/1/0401/9974/9789/files/cart_gray.png?v=1593891089' }}" alt="gray_icon">
            <img class="green_icon" src="{{ 'https://cdn.shopify.com/s/files/1/0401/9974/9789/files/cart_green_button.png?v=1593916239' }}" alt="green_icon">
            <!-- <img class="cart_text" src="{{ 'https://cdn.shopify.com/s/files/1/0401/9974/9789/files/add_to_cart.png?v=1593920675' }}" alt="button_text"> -->
            <p class="cart_text">Add to cart</p>
          </button>
          <button class="add_to_wishlist">
            <img class="gray_icon" src="{{ 'https://cdn.shopify.com/s/files/1/0401/9974/9789/files/wishlist_gray.png?v=1593911148' }}" alt="gray_icon">
            <img class="green_icon" src="{{ 'https://cdn.shopify.com/s/files/1/0401/9974/9789/files/wishlist_green.png?v=1593916371' }}" alt="green_icon">
            <!-- <img class="wishlist_text" src="{{ 'https://cdn.shopify.com/s/files/1/0401/9974/9789/files/Add_to_wishlist.png?v=1593920675' }}" alt="button_text"> -->
            <p class="wishlist_text">Add to wishlist</p>
          </button>
          <button class="compare">
            <img class="gray_icon" src="{{ 'https://cdn.shopify.com/s/files/1/0401/9974/9789/files/compare_gray.png?v=1593913446' }}" alt="gray_icon">
            <img class="green_icon" src="{{ 'https://cdn.shopify.com/s/files/1/0401/9974/9789/files/compare_green.png?v=1593915728' }}" alt="green_icon">
            <!-- <img class="compare_text" src="{{ 'https://cdn.shopify.com/s/files/1/0401/9974/9789/files/Add_toCompare.png?v=1593920675' }}" alt="button_text" > -->
            <p class="compare_text">Add to compare</p>
          </button>
        </div>
      </div>
    {% endfor %}
  </div>
</div>